{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "overrides": [
        {
            "files": [
                "tests/**"
            ],
            "plugins": [
                "jest"
            ],
            "extends": [
                "plugin:jest/recommended"
            ],
            "rules": {
                "jest/prefer-expect-assertions": "off"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [],
    "rules": {}
}